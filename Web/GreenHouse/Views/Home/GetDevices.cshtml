@model IEnumerable<GreenHouse.ViewModels.DeviceViewModel>

@{
    ViewBag.Title = "GetDevices";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="h3">
    @Html.ActionLink("Register new device","RegisterDevice","Home",null, new {@class="btn btn-primary"})
</div>

@if(Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Token</th>
            <th>Summary</th>
            <th>Public View</th>
        </tr>
    
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Token</td>
            <td>@item.Summary</td>
            <td>
            @if (@item.ViewId != null)
            {
                @Html.ActionLink("view","Index","Public", new { viewId = item.ViewId },null)
            }
            </td>
        </tr>
    
        }
    </table>
}
else
{
    <div>No devices</div>
}
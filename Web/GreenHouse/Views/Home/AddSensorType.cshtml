@model GreenHouse.ViewModels.SensorTypeViewModel

@{
    ViewBag.Title = "Add sensor type";
    Layout = "~/Views/_Layout.cshtml";
}


@using(Html.BeginForm("AddSensorType","Home",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.TypeName)
        @Html.TextBoxFor(x=>x.TypeName, new {@class="form-control" })        
    </div>
    <div class="form-group">
        @Html.LabelFor(x=>x.Dimension)
        @Html.TextBoxFor(x=>x.Dimension, new {@class="form-control" })        
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
}
